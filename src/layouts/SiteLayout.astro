---
interface Props {
	title?: string;
	description?: string;
	lang?: string;
}

const { title = 'Ursula Enderle Fotografie', description = 'Hochzeitsfotografie und Immobilienfotografie aus Fischingen.', lang = 'de' } = Astro.props as Props;
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Ursula Enderle" />
		<meta name="keywords" content="Fotografie, Hochzeitsfotografie, Immobilienfotografie, Fischingen" />
		<meta name="robots" content="noindex, nofollow, noarchive, nosnippet" />

		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/Portrait.jpg" />
		<meta property="og:image:width" content="600" />
		<meta property="og:image:height" content="800" />
		<meta property="og:image:alt" content="Ursula Enderle" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet" />

	</head>
	<body>
		<slot />
	</body>
</html>

